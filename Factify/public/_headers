# Netlify/Vercel headers configuration
# Add security headers for better Lighthouse scores

/*
  # Content Security Policy - helps prevent XSS attacks
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://localhost:5001 http://localhost:5173
  
  # Prevent clickjacking
  X-Frame-Options: DENY
  
  # XSS Protection
  X-Content-Type-Options: nosniff
  
  # HTTPS Strict Transport Security (6 months)
  Strict-Transport-Security: max-age=15768000; includeSubDomains
  
  # Referrer Policy
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Permissions Policy
  Permissions-Policy: camera=(), microphone=(), geolocation=()
